<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginBottom="@dimen/list_item_margin_bottom"
	android:background="?android:attr/selectableItemBackground"
	android:orientation="vertical">

	<TextView
		android:id="@+id/rating_mark_text"
		android:layout_width="@dimen/block_size"
		android:layout_height="@dimen/block_size"
		android:layout_marginEnd="8dp"
		android:layout_marginRight="8dp"
		android:gravity="center"
		android:textColor="@android:color/white"
		android:textSize="30sp"
		tools:background="@color/blue_main"
		tools:text="4.3" />

	<ImageView
		android:id="@+id/photo_image"
		android:layout_width="@dimen/block_size"
		android:layout_height="@dimen/block_size"
		android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"
		android:layout_marginBottom="2dp"
		android:layout_marginEnd="4dp"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="4dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="2dp"
		android:scaleType="fitCenter"
		tools:src="@drawable/beer_208708" />

	<TextView
		android:id="@+id/beer_name_text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="2dp"
		android:layout_marginTop="8dp"
		android:layout_toEndOf="@+id/rating_mark_text"
		android:layout_toLeftOf="@+id/photo_image"
		android:layout_toRightOf="@+id/rating_mark_text"
		android:layout_toStartOf="@+id/photo_image"
		android:fontFamily="sans-serif-condensed"
		android:textColor="@android:color/black"
		android:textSize="16sp"
		android:textStyle="bold"
		tools:text="À l’Abri de la Tempête Palabre de la Corne de Glace" />

	<FrameLayout
		android:id="@+id/date_badge_wrapper"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/beer_name_text"
		android:layout_marginLeft="8dp"
		android:layout_marginStart="8dp"
		android:layout_toLeftOf="@+id/photo_image"
		android:layout_toStartOf="@+id/photo_image">

		<TextView
			android:id="@+id/date_text"
			android:layout_width="wrap_content"
			android:layout_height="24dp"
			android:layout_gravity="right"
			android:paddingTop="2dp"
			android:textColor="@android:color/black"
			android:textSize="14sp"
			tools:text="08/14" />

		<TextView
			android:id="@+id/offline_badge"
			style="@style/Badge.Offline"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/rate_offline_badge"
			tools:alpha="0.4" />

	</FrameLayout>

	<TextView
		android:id="@+id/brewer_name_text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/beer_name_text"
		android:layout_marginBottom="8dp"
		android:layout_toEndOf="@+id/rating_mark_text"
		android:layout_toLeftOf="@+id/date_badge_wrapper"
		android:layout_toRightOf="@+id/rating_mark_text"
		android:layout_toStartOf="@+id/date_badge_wrapper"
		android:fontFamily="sans-serif-condensed"
		android:textColor="@android:color/black"
		android:textSize="16sp"
		tools:text="À l’Abri de la Tempête" />

</RelativeLayout>
